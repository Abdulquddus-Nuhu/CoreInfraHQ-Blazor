@code {

    public record Transaction(string ReferenceNumber, string Amount, string Type, string Status);


    private List<Transaction> Transactions = new List<Transaction>();
    private string _searchString;
    private bool _sortNameByLength;
    private List<string> _events = new();

    private Func<Transaction, object> _sortBy => x =>
    {
        if (_sortNameByLength)
            return x.ReferenceNumber.Length;
        else
            return x.ReferenceNumber;
    };
 

    protected override async Task OnInitializedAsync()
    {
        Transactions = await httpClient.GetFromJsonAsync<List<Transaction>>("api/Transactions/GetTransactions");
        // Transactions = await httpClient.GetFromJsonAsync<List<Transaction>>("api/Transactions/GetTransactions?numberOfRecords=12");
    }

    // events
    void RowClicked(DataGridRowClickEventArgs<Transaction> args)
    {
        _events.Insert(0, $"Event = RowClick, Index = {args.RowIndex}, Data = {System.Text.Json.JsonSerializer.Serialize(args.Item)}");
    }

    void RowRightClicked(DataGridRowClickEventArgs<Transaction> args)
    {
        _events.Insert(0, $"Event = RowRightClick, Index = {args.RowIndex}, Data = {System.Text.Json.JsonSerializer.Serialize(args.Item)}");
    }

    void SelectedItemsChanged(HashSet<Transaction> items)
    {
        _events.Insert(0, $"Event = SelectedItemsChanged, Data = {System.Text.Json.JsonSerializer.Serialize(items)}");
    }
}
